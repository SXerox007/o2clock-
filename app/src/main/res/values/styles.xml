<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
    </style>

    <!-- any Layout whose width height match parent -->
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="nav_text">
        <item name="android:textSize">@dimen/nav_menu_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/nav_item_margin_start</item>
    </style>

    <style name="NavMenuItem">
        <item name="android:background">@drawable/switch_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_menu_height</item>
        <item name="android:textSize">@dimen/nav_menu_text_size</item>
    </style>


    <style name="prim_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector_primary_color</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="title_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:textSize">@dimen/font_xxxlarge</item>
    </style>

    <style name="title_textView.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="title_textView.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normal_textView" parent="title_textView">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="normal_textView.Gray">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="normal_textView.Black">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="small_textView" parent="title_textView">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="small_textView.Gray">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="CustomButtonTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
    </style>


    <style name="normal_imageView">
        <item name="android:layout_width">@dimen/coustom_width_normal</item>
        <item name="android:layout_height">@dimen/coustom_height_normal</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="primary_custom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textAppearance">@style/CustomButtonTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="primary_medium_custom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="toolbar_icon" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>



    <style name="text_view">
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/fake_black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fake_black</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
    </style>

</resources>
